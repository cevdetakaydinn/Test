@model IEnumerable<Test.Models.StudentsReport>
@{
    ViewBag.Title = "Index";
}
@Html.Partial("_Sidebar")
<div class="main">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstExam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondExam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ready)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curriculum.Lesson.Name)
            </th>
            <th>
                FirstName
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Absent)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstExam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondExam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ready)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curriculum.Lesson.Name)
            </td>
            <td> 
                <!--Ajaxla UserId nin ait olduğu kişiyi getir Test aşamasında id nin sayısal olarak artırılması sağlanıp fonksiyonunu buttonsuz gösterilmesi gerekmekte-->
                <span class="userId">@Html.DisplayFor(modelItem => item.Student.UserId)</span>
               

</td>
            <td>
                @Html.DisplayFor(modelItem => item.Absent)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
        }

    </table>
    </div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script type="text/javascript" src="~/Scripts/App.js"></script>