@model IEnumerable<Test.Models.Curriculum>

@{
    ViewBag.Title = "Index";
}
@Html.Partial("_Sidebar")

<div class="main">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Lesson.Name)
            </th>
            <th>
                Teacher
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Term.Term1)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Lesson.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Teacher.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Term.Term1)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>